{
  "appId": "gridieblocks",
  "productName": "GridieBlocks",
  "directories": {
    "buildResources": "assets",
    "output": "dist-electron"
  },
  "files": [
    "dist/**",
    "electron/**",
    "!electron/arduino/**",
    "!electron/arduino-data/**"
  ],
  "asarUnpack": ["electron/arduino/**"],
  "extraResources": [
    {
      "from": "electron/arduino-cli.exe",
      "to": "arduino-cli.exe"
    },
    {
      "from": "electron/arduino",
      "to": "arduino"
    },
    {
      "from": "electron/arduino-data",
      "to": "arduino-data"
    },
    {
      "from": "electron/arduino-data/arduino15",
      "to": "arduino15"
    }
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "compression": "store",
  "win": {
    "target": ["nsis"],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "${productName} Setup ${version}.exe"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "assets"
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/icon.icns"
  }
}
